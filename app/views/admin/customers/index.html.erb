<h3>Customers</h3>

<% if @customers.any? %>
	<table>
		<tr>
			<th>Fullname</th>
			<th>Email</th>
			<th>Adress</th>
			<th colspan="2">Actions</th>
		</tr>
		<% @customers.each do |customer| %>
			<tr>
				<td><%= customer.fullname %></td>
				<td><%= customer.email %></td>
				<td><%= customer.address %></td>
				<td><%= link_to 'show', admin_customer_path(customer) %></td>
				<td><%= link_to 'delete', admin_customers_path, method: :delete, data:{confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>
	</table>
	<% else %>
	<p>There are no customers to show </p>
<% end %>