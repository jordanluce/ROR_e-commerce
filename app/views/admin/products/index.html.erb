<h3>products</h3> 

<% if @products.any? %>
	<table>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Published</th>
			<th colspan="3">Actions</th>
		</tr>

	<% @products.each do |prod| %>
		<tr>
			<td><%= prod.name %></td>
			<td><%= currency(prod.price) %></td>
			<td><%= prod.published %></td>
			<td><%= link_to 'Show', admin_product_path(prod) %></td>
			<td><%= link_to 'Edit', edit_admin_product_path(prod) %></td>
			<td><%= link_to 'Delete', admin_product_path(prod), method: :delete, data:{confirm:'Are you sure'} %></td>
		</tr>
	<% end %>
	</table>
<% else %>
	<p>There are no products to show</p>
<% end %>